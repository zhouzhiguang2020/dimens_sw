<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainTestActivity">

    <com.example.laddingwu.adapterapplication.view.TickSeekBar
        android:id="@+id/tick_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:layout_marginRight="@dimen/qb_px_20"
        android:max="100"
        android:maxHeight="8dp"
        android:progress="10"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/thumb"
        android:thumbOffset="2dp"
        app:auto_adjust_tick="true"
        app:tick_height="20"
        app:tick_with="20"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>